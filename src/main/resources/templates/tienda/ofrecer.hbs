{{#partial "titulo"}}Ofrecer Productos{{/partial}}

{{#partial "styles"}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/public/css/tienda/ofrecerRecompensaProducto/styles.css">
    <link rel="stylesheet" href="/public/css/tienda/styles.css">
{{/partial}}

{{#partial "scripts"}}
    <script src="/public/js/tienda/script.js" defer></script>
    <script src="/public/js/tienda/ofrecer/script.js" defer></script>
{{/partial}}

{{#partial "contenido"}}
    <main>
        <div class="points-container">
            <h1>Productos ofrecidos</h1>

            <label for="category-filter">Filtrar por categoría:</label>
            <select id="category-filter" onchange="filtrarPorCategoria()">
                <option value="todos"></option>
                {{#each categorias}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>

            <div class="services-list">
                <p id="no-services-message">No hay producto de este rubro</p>
                <div id="services-container">
                    {{#each recompensas}}
                        <div class="service-item" data-categoria="{{this.rubro}}">
                            <img src="https://via.placeholder.com/100" alt="Servicio 3">
                            <div class="service-info">
                                <h3>{{this.nombre}}</h3>
                                <p>Valor en Puntos: {{this.costoEnPuntos}}</p>
                                <p>Categoría: {{this.rubro}}</p>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
            <button class="btn-admin" onclick="abrirModalAgregarRecompensa()">Agregar recompensa</button>
        </div>

        <div class="modal" id="modal-agregar-servicio">
            <div class="modal-content">
                <h2>Agregar Nuevo Producto</h2>
                <form id="form-agregar-servicio" method="POST" action="/tienda/recompensas/admin">
                    <div class="input-box">
                        <label for="nombre-servicio">
                            Nombre:
                            <input type="text" id="nombre-servicio" name="nombreServicio"
                                   required>
                        </label>
                    </div>
                    <div class="input-box">
                        <label for="puntos-servicio">
                            Costo:
                            <input type="number" id="puntos-servicio" name="puntosServicio" required>
                        </label>
                    </div>
                    <div class="input-box">
                        <label for="stock-servicio">
                            Stock:
                            <input type="number" id="stock-servicio" name="stockServicio" required>
                        </label>
                    </div>
                    <div class="input-box">
                        <label for="categoria-servicio">
                            Categoria:
                            <select id="categoria-servicio" name="categoriaServicio">
                                {{#each categorias}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                        </label>
                    </div>
                    <button type="submit" class="btn-canjear-modal">Agregar</button>
                    <button type="button" class="btn-close" onclick="cerrarModalAgregarRecompensa()">Cancelar</button>
                </form>
            </div>
        </div>
    </main>
{{/partial}}

