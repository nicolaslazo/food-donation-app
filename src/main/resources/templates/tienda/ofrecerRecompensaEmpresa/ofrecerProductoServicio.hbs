{{#partial "titulo"}}Ofrecer {{type}}s{{/partial}}

{{#partial "styles"}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/public/css/tienda/ofrecerRecompensaProducto/styles.css">
    <link rel="stylesheet" href="/public/css/tienda/styles.css">
{{/partial}}

{{#partial "scripts"}}
    <script src="/public/js/tienda/script.js" defer></script>
    <script src="/public/js/tienda/ofrecerRecompensaProducto/script.js" defer></script>
{{/partial}}

{{#partial "contenido"}}
<main>
    <div class="points-container">
        <h1>{{type}} Ofrecidos</h1>

        <label for="category-filter">Filtrar por Categoría:</label>
        <select id="category-filter" onchange="filtrarPorCategoria()">
            <option value="todos">Todos</option>
            <option value="educacion">Educación</option>
            <option value="electronica">Electronica</option>
            <option value="entretenimiento">Entretenimiento</option>
            <option value="gastronomia">Gastronomía</option>
            <option value="hogar">Hogar</option>
            <option value="indumentaria">Indumentaria</option>
            <option value="juguetes">Juguetes</option>
            <option value="librerias">Librerias</option>
            <option value="mascotas">Mascotas</option>
            <option value="salud">Salud y Bienestar</option>
            <option value="supermercado">Supermercado</option>
            <option value="vehiculos">Vehiculos</option>
            <option value="viajes">Viajes</option>
            <option value="otros">Otros</option>
        </select>

        <div class="services-list">
            <p id="no-services-message">No hay {{type}} de este rubro :(</p>
            <div id="services-container">
                <div class="service-item" data-categoria="gastronomia">
                    <img src="https://via.placeholder.com/100" alt="Servicio 1">
                    <div class="service-info">
                        <h3>{{type}} 1</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Gastronomía</p>
                    </div>
                    <div class="service-actions">
                        <button class="btn-edit" onclick="administrarServicio(1)">
                            <i class="fa fa-pencil-alt"></i>
                        </button>
                        <button class="btn-delete" onclick="mostrarModalEliminar(this)">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                </div>
                <div class="service-item" data-categoria="viajes">
                    <img src="https://via.placeholder.com/100" alt="Servicio 2">
                    <div class="service-info">
                        <h3>{{type}} 2</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Viajes</p>
                    </div>
                    <div class="service-actions">
                        <button class="btn-edit" onclick="administrarServicio(1)">
                            <i class="fa fa-pencil-alt"></i>
                        </button>
                        <button class="btn-delete" onclick="mostrarModalEliminar(this)">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                </div>

                <div class="service-item" data-categoria="educacion">
                    <img src="https://via.placeholder.com/100" alt="Servicio 3">
                    <div class="service-info">
                        <h3>{{type}} 3</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Educación</p>
                    </div>
                    <div class="service-actions">
                        <button class="btn-edit" onclick="administrarServicio(1)">
                            <i class="fa fa-pencil-alt"></i>
                        </button>
                        <button class="btn-delete" onclick="mostrarModalEliminar(this)">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                </div>

                <div class="service-item" data-categoria="salud">
                    <img src="https://via.placeholder.com/100" alt="Servicio 3">
                    <div class="service-info">
                        <h3>{{type}} 4</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Salud y Bienestar</p>
                    </div>
                    <div class="service-actions">
                        <button class="btn-edit" onclick="administrarServicio(1)">
                            <i class="fa fa-pencil-alt"></i>
                        </button>
                        <button class="btn-delete" onclick="mostrarModalEliminar(this)">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                </div>

                <div class="service-item" data-categoria="educacion">
                    <img src="https://via.placeholder.com/100" alt="Servicio 3">
                    <div class="service-info">
                        <h3>{{type}} 5</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Educación</p>
                    </div>
                    <div class="service-actions">
                        <button class="btn-edit" onclick="administrarServicio(1)">
                            <i class="fa fa-pencil-alt"></i>
                        </button>
                        <button class="btn-delete" onclick="mostrarModalEliminar(this)">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <button class="btn-admin" onclick="abrirModalAgregarServicio()">Agregar {{type}}</button>
    </div>

    <div class="modal" id="modal">
        <div class="modal-content">
            <h2>Modificar {{type}}: <span id="producto">Nombre</span></h2>
            <form id="form-modificar-valores">
                <div class ="input-box">
                    <p>Puntos necesarios: </p>
                    <input type="number" id="edit-points" required>
                </div>
                <div class ="input-box">
                    <p>Stock: </p>
                    <input type="number" id="edit-stocks" required>
                </div>
                <button type="submit" class="btn-canjear-modal">Aceptar</button>
                <button type="button" class="btn-close" onclick="cerrarModal()">Cancelar</button>
            </form>
        </div>
    </div>

    <div class="modal" id="modal-agregar-servicio">
        <div class="modal-content">
            <h2>Agregar Nuevo {{type}}</h2>
            <form id="form-agregar-servicio">
                <div class="input-box">
                    <p>Nombre del {{type}}:</p>
                    <input type="text" id="nombre-servicio" required>
                </div>
                <div class="input-box">
                    <p>Puntos del {{type}}:</p>
                    <input type="number" id="puntos-servicio" required>
                </div>
                <div class="input-box">
                    <p>Stock:</p>
                    <input type="number" id="stock-servicio" required>
                </div>
                <div class ="input-box">
                    <p>Categoría:</p>
                    <select id="categoria-servicio">
                        <option value="educacion">Educación</option>
                        <option value="electronica">Electronica</option>
                        <option value="entretenimiento">Entretenimiento</option>
                        <option value="gastronomia">Gastronomía</option>
                        <option value="hogar">Hogar</option>
                        <option value="indumentaria">Indumentaria</option>
                        <option value="juguetes">Juguetes</option>
                        <option value="librerias">Librerias</option>
                        <option value="mascotas">Mascotas</option>
                        <option value="salud">Salud y Bienestar</option>
                        <option value="supermercado">Supermercado</option>
                        <option value="vehiculos">Vehiculos</option>
                        <option value="viajes">Viajes</option>
                        <option value="otros">Otros</option>
                    </select>
                </div>
                <button type="submit" class="btn-canjear-modal" >Agregar</button>
                <button type="button" class="btn-close" onclick="cerrarModalAgregarServicio()">Cancelar</button>
            </form>
        </div>
    </div>

    <div class="modal" id="modalEliminar">
        <div class="modal-content">
            <h2>Eliminar {{type}}</h2>
            <p>¿Está seguro de que desea eliminar este {{type}}?</p>
            <p>Esta acción no se puede deshacer.</p>
            <button class="btn-close" onclick="eliminarConfirmado()">Eliminar</button>
            <button class="btn-close" onclick="cerrarModalEliminar()">Cancelar</button>
        </div>
    </div>

</main>
{{/partial}}

