{{#partial "titulo"}}Canje Puntos{{/partial}}

{{#partial "styles"}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/public/css/tienda/canjeProductoServicio/styles.css">
    <link rel="stylesheet" href="/public/css/tienda/styles.css">
{{/partial}}

{{#partial "scripts"}}
    <script src="/public/js/tienda/script.js" defer></script>
    <script src="/public/js/tienda/canjeProductoServicio/script.js" defer></script>
{{/partial}}

{{#partial "contenido"}}
<main>
    <div class="points-container">
        <h1>Puntos Disponibles: <span id="points">1200</span></h1>

        <label for="category-filter">Filtrar por Categoría:</label>
        <select id="category-filter" onchange="filtrarPorCategoria()">
            <option value="todos">Todos</option>
            <option value="educacion">Educación</option>
            <option value="electronica">Electronica</option>
            <option value="entretenimiento">Entretenimiento</option>
            <option value="gastronomia">Gastronomía</option>
            <option value="hogar">Hogar</option>
            <option value="indumentaria">Indumentaria</option>
            <option value="juguetes">Juguetes</option>
            <option value="librerias">Librerias</option>
            <option value="mascotas">Mascotas</option>
            <option value="salud">Salud y Bienestar</option>
            <option value="supermercado">Supermercado</option>
            <option value="vehiculos">Vehiculos</option>
            <option value="viajes">Viajes</option>
            <option value="otros">Otros</option>
        </select>

        <div class="services-list">
            <h2>Productos Disponibles para Canjear</h2>
            <p id="no-services-message">No hay productos de este rubro :(</p>
            <div id="services-container">
                <div class="service-item" data-categoria="gastronomia">
                    <img src="https://via.placeholder.com/100" alt="Servicio 1">
                    <div class="service-info">
                        <h3>Producto 1</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Gastronomía</p>
                    </div>
                    <button class="btn-canjear-lista" onclick="canjearServicio(1)">Canjear</button>
                </div>
                <div class="service-item" data-categoria="viajes">
                    <img src="https://via.placeholder.com/100" alt="Servicio 2">
                    <div class="service-info">
                        <h3>Producto 2</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Viajes</p>
                    </div>
                    <button class="btn-canjear-lista" onclick="canjearServicio(2)">Canjear</button>
                </div>
                <div class="service-item" data-categoria="educacion">
                    <img src="https://via.placeholder.com/100" alt="Servicio 3">
                    <div class="service-info">
                        <h3>Producto 3</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Educación</p>
                    </div>
                    <button class="btn-canjear-lista" onclick="canjearServicio(3)">Canjear</button>
                </div>
                <div class="service-item" data-categoria="salud">
                    <img src="https://via.placeholder.com/100" alt="Servicio 3">
                    <div class="service-info">
                        <h3>Producto 4</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Salud y Bienestar</p>
                    </div>
                    <button class="btn-canjear-lista" onclick="canjearServicio(4)">Canjear</button>
                </div>
                <div class="service-item" data-categoria="educacion">
                    <img src="https://via.placeholder.com/100" alt="Servicio 3">
                    <div class="service-info">
                        <h3>Producto 5</h3>
                        <p>Valor en Puntos: xxx</p>
                        <p>Categoría: Educación</p>
                    </div>
                    <button class="btn-canjear-lista" onclick="canjearServicio(5)">Canjear</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="modal">
        <div class="modal-content">
            <h2>Confirmar Canje</h2>
            <p>Puntos necesarios: <span id="required-points">xxx</span></p>
            <p>Puntos restantes: <span id="remaining-points">xxx</span></p>
            <p>Producto: <span id="product-info">Nombre Producto</span></p>
            <button class="btn-canjear-modal" onclick="confirmarCanje()">Canjear</button>
            <button class="btn-close" onclick="cerrarModal()">Cancelar</button>
        </div>
    </div>
</main>
{{/partial}}

