{{#partial "contenido"}}
<main class="main__container">
        <div class="form__container">
            <div class="form-title">
                REPORTAR FALLA TECNICA
            </div>

            <form action="" class="form__body">
                <div class="heladera-details-container">
                    <label class="input-box">
                        Heladera Defectuosa *
                        <div id="map"></div>
                        <input type="hidden" id="latitude" name="latitude">
                        <input type="hidden" id="longitude" name="longitude">
                    </label>
                    <!-- Existing Inputs -->
                    <label class="input-box">
                        Descripción de la Falla Técnica
                        <textarea name="descripcion-falla" id="input-text-area" maxlength="255"></textarea>
                    </label>
                    <label class="input-box">
                        Fecha de la Falla Técnica *
                        <input type="date" required>
                    </label>
                    <label class="custom-file-upload">
                        Imagen de la Falla Técnica
                        <input type="file"  accept="image/*">
                    </label>
                    <label class="input-check">
                        Acepto los <a href="../../terminosYcondiciones/terminos.html"> terminos y condiciones </a>
                        <input type="checkbox" required>
                    </label>
                </div>

                <div class="submit-button">
                    <input type="submit" value="ENVIAR SOLICITUD">
                </div>

                <div class="aclaracion-campos"> Los campos con * son obligatorios </div>

            </form>
        </div>
    </main>
{{/partial}}

